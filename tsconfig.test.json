{
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2022",
    "lib": ["ES2023", "DOM"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "types": ["jest", "node", "@testing-library/jest-dom", "jest-axe"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**/*.ts",
    "src/**/__tests__/**/*.tsx",
    "src/setupTests.ts",
    "src/test/__mocks__/**/*.ts"
  ]
}
